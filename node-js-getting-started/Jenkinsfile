pipeline {
    agent any

    environment {
        SONAR_TOKEN = credentials('sonar-token')
    }

  tools {
    nodejs 'NodeJS 20'
}



    stages {

        /* 1Ô∏è‚É£ Install Dependencies */
        stage('Install Dependencies') {
            steps {
                dir('node-js-getting-started') {
                    sh 'npm install'
                }
            }
        }

        /* 2Ô∏è‚É£ SAST SonarQube Analysis */
        stage('SAST SonarQube Analysis') {
    steps {
        dir('node-js-getting-started') {
            withSonarQubeEnv('SonarQube') {
                withEnv(["PATH+SONAR=${tool 'SonarScanner'}/bin"]) {
                    sh '''
                        sonar-scanner \
                          -Dsonar.projectKey=devsecops \
                          -Dsonar.sources=. \
                          -Dsonar.host.url=http://localhost:9000 \
                          -Dsonar.login=$SONAR_TOKEN
                    '''
                }
            }
        }
    }
}



        /* 3Ô∏è‚É£ OWASP Dependency Scan */
        stage('OWASP Dependency Scan') {
            steps {
                dir('node-js-getting-started') {
                    sh 'npx dependency-check --failOnCVSS 7 || true'
                }
            }
        }

        /* 4Ô∏è‚É£ Secrets Scan */
        stage('Secrets Scan') {
            steps {
                dir('node-js-getting-starting') {
                    sh 'gitleaks detect --source . --exit-code 1 || true'
                }
            }
        }

        /* 5Ô∏è‚É£ Build Docker Image */
        stage('Build Docker Image') {
            steps {
                echo 'üê≥ Building Docker image...'
                dir('node-js-getting-started') {
                    sh 'docker build -t devsecops:latest .'
                }
            }
        }

        /* 6Ô∏è‚É£ Docker Image Scan */
        stage('Docker Image Scan') {
            steps {
                script {
                    echo 'üîç Running Trivy Docker image scan...'
                    sh '''
                        trivy image \
                            --timeout 10m \
                            --exit-code 0 \
                            --no-progress \
                            --format json \
                            -o trivy-report.json \
                            devsecops:latest

                        trivy image \
                            --timeout 10m \
                            --exit-code 0 \
                            --no-progress \
                            --format table \
                            devsecops:latest | head -n 20
                    '''
                    archiveArtifacts artifacts: 'trivy-report.json', allowEmptyArchive: true
                }
            }
        }



        /* 7Ô∏è‚É£ DAST Scan */
        stage('DAST Scan') {
    steps {
        script {
            echo "üîç Running DAST scan with Nikto..."

            // Clean up any existing container with the same name
            sh 'docker rm -f devsecops || true'

            // Start the container
            sh 'docker run -d --name devsecops -p 5006:5006 devsecops:latest'

            // Wait until the container is listening on port 5006 (up to 60s)
            sh 'timeout 60 bash -c "until nc -z localhost 5006; do sleep 1; done"'

            // Run Nikto scan
            sh 'docker exec devsecops nikto -h http://localhost:5006 -output nikto-report.html'

            // Stop and remove the container after scanning
            sh 'docker stop devsecops || true'
            sh 'docker rm devsecops || true'

            echo "‚úÖ DAST scan completed. Report: nikto-report.html"
        }
    }
}






        /* 8Ô∏è‚É£ Deploy */
        stage('Deploy') {
            steps {
                echo 'üöÄ Deploying application...'
                sh '''
                    docker stop devsecops || true
                    docker rm devsecops || true
                    docker run -d --name devsecops -p 8081:5006 devsecops:latest
                '''
                echo '‚úÖ Deployment complete.'
            }
        }
    }

    post {
        success {
            echo '‚úÖ Pipeline DevSecOps completed successfully!'
        }
        failure {
            echo '‚ùå Pipeline failed ‚Äî check the console output for details.'
        }
    }
}
