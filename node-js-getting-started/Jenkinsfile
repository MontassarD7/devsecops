pipeline {
    agent any

    environment {
        SONAR_TOKEN = credentials('sonar-token')
    }

    stages {

        // 1Ô∏è‚É£ Install Dependencies
        stage('Install Dependencies') {
            steps {
                dir('node-js-getting-started') {
                    sh 'npm install'
                }
            }
        }

        // 2Ô∏è‚É£ SAST SonarQube Analysis
        stage('SAST SonarQube Analysis') {
            steps {
                dir('node-js-getting-started') {
                    withSonarQubeEnv('SonarQube') {
                        sh '''sonar-scanner \
                          -Dsonar.projectKey=node-app \
                          -Dsonar.sources=. \
                          -Dsonar.host.url=http://localhost:9000 \
                          -Dsonar.login=$SONAR_TOKEN \
                          -Dsonar.qualitygate.wait=true'''
                    }
                }
            }
        }

        // 3Ô∏è‚É£ OWASP Dependency Scan
        stage('OWASP Dependency Scan') {
            steps {
                dir('node-js-getting-started') {
                    sh 'npx @owasp/dependency-check --failOnCVSS 7'
                }
            }
        }

        // 4Ô∏è‚É£ Secrets Scan
        stage('Secrets Scan') {
            steps {
                sh 'gitleaks detect --source . --exit-code 1'
            }
        }

        // 5Ô∏è‚É£ Build Docker Image
        stage('Build Docker Image') {
            steps {
                echo 'üê≥ Building Docker image...'
                sh '''
                    docker build -t myapp:latest node-js-getting-started/
                '''
            }
        }

        // 6Ô∏è‚É£ Docker Image Scan
        stage('Docker Image Scan') {
            steps {
                script {
                    echo 'üîç Running Trivy Docker image scan...'
                    sh '''
                        trivy image \
                            --timeout 10m \
                            --exit-code 0 \
                            --no-progress \
                            --format json \
                            -o trivy-report.json \
                            myapp:latest

                        trivy image \
                            --timeout 10m \
                            --exit-code 0 \
                            --no-progress \
                            --format table \
                            myapp:latest | head -n 20
                    '''
                    archiveArtifacts artifacts: 'trivy-report.json', allowEmptyArchive: true
                    echo '‚úÖ Trivy scan complete.'
                }
            }
        }

        // 7Ô∏è‚É£ DAST Scan
        stage('DAST Scan') {
            steps {
                echo "üîç Running DAST scan with Nikto..."
                sh '''
                    nikto -h http://staging.monsite.com:8080 -output nikto-report.html
                '''
                archiveArtifacts artifacts: 'nikto-report.html', allowEmptyArchive: true
            }
        }

        // 8Ô∏è‚É£ Deploy
        stage('Deploy') {
            steps {
                echo 'üöÄ Deploying application...'
                sh '''
                    docker stop myapp || true
                    docker rm myapp || true
                    docker run -d --name myapp -p 8081:3000 myapp:latest
                '''
                echo '‚úÖ Deployment complete.'
            }
        }

    }

    post {
        success {
            echo '‚úÖ Pipeline DevSecOps completed successfully!'
        }
        failure {
            echo '‚ùå Pipeline failed ‚Äî check the console output for details.'
        }
    }
}
